extends ../layout

block content
  h2 submit a new one?
  form(role='form' action='/ret' method='post')
    .form-group
      label(for='vid') URL
      input#vid.form-control(type='text' name='vid' placeholder='url here please')
    input.btn.btn-default(type='submit')
  each video in videos
    div.video
      a(href='https://www.youtube.com/watch?v=' + video._id)
        h3= video.title
      p= 'likes: ' + video.likes + ' dislikes: ' + video.dislikes
